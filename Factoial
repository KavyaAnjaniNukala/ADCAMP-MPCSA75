import java.util.*;
class Factorial
{
   public static void main(String args[ ])
   {
      Scanner s = new Scanner(System.in);
      System.out.print("Enter the number:");
      int n= s.nextInt();
      int factorial = fact(n);
      System.out.println("factorial of given num is: "+factorial);
   }
     static int fact(int n)
    {
       if(n>=1)
       {
          return fact(n-1)* n;
       }
      else
         return 1;
       
   }
}
